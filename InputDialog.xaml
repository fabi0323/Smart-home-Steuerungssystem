<Window x:Class="Steuerungssystem.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steuerungssystem"
        mc:Ignorable="d"
        Title="Input" Height="150" Width="300">
    <StackPanel Margin="10">
        <TextBlock Name="MessageText" Margin="0,0,0,10"/>
        <TextBox Name="InputTextBox" Margin="0,0,0,10"/>
        <Button Content="OK" Width="70" HorizontalAlignment="Right" Click="OnOkButtonClick"/>
    </StackPanel>
</Window>
